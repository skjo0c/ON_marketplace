<%= form_for @order, url: checkout_path do |f|%>

	<div class="form-group">
		<%= f.label :FirstName, 'First Name'%>
		<%= f.text_field :first_name, value: current_user.firstname%>
	</div>

	<div class="form-group">
		<%= f.label :LastName, 'Last Name'%>
		<%= f.text_field :last_name, value: current_user.lastname%>
	</div>

	<div class="form-group">
		<%= f.label :Mobile%>
		<%= f.text_field :mobile, value: current_user.mobile%>
	</div>

	<div class="form-group">
		<%= f.label :ShippingAddress, 'Shipping Address'%>
		<%= f.text_field :address, value: current_user.address%>
	</div>

	<%= f.submit 'Checkout'%>

<% end %>